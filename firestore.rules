rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // üîê Fungsi pengecekan admin
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // ===== USERS =====
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ===== NEWS =====
    match /news/{newsId} {
      allow read: if true;

      // ‚úÖ Hanya author atau admin yang boleh update konten berita
      allow update, delete: if request.auth != null && (
        isAdmin() ||
        resource.data.authorId == request.auth.uid ||
        resource.data.author.id == request.auth.uid
      );

      // ‚úÖ Semua user login boleh update untuk like/comment/bookmark
      allow update: if request.auth != null;

      // ‚úÖ Hanya author yang boleh membuat berita
      allow create: if request.auth != null && 
        (request.resource.data.authorId == request.auth.uid || request.resource.data.author.id == request.auth.uid);
    }

    // ===== COMMENTS =====
    match /comments/{commentId} {
      allow read: if true;

      // ‚úÖ Admin boleh delete komentar
      allow delete: if isAdmin();

      // ‚úÖ Penulis komentar bisa update/delete
      allow update, delete: if request.auth != null && 
        (resource.data.authorId == request.auth.uid || resource.data.author.id == request.auth.uid);

      // ‚úÖ Hanya user login yang boleh membuat komentar
      allow create: if request.auth != null &&
        (request.resource.data.authorId == request.auth.uid || request.resource.data.author.id == request.auth.uid);
    }


    // ===== BOOKMARKS =====
    match /bookmarks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ===== NEWS REPORTS =====
    match /news_reports/{reportId} {
      allow create: if request.auth != null;
      allow read, delete: if isAdmin();
    }
    

    // ===== DEFAULT =====
    match /{document=**} {
      allow read, write: if false;
    }
  }
}